{
    "name": "zerox-core",
    "private": true,
    "version": "2.0.0",
    "description": "Bot de Trading ZEROX - Sistema de IA Avanzado",
    "author": "Equipo ZEROX",
    "type": "module",
    "main": "electron/principal.cjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "server": "node nucleo/servidor_api.js",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:build": "vite build && electron-builder"
    },
    "dependencies": {
        "axios": "^1.13.2",
        "body-parser": "^2.2.1",
        "ccxt": "^4.5.22",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "epub-parser": "^0.2.5",
        "express": "^4.22.1",
        "framer-motion": "^10.18.0",
        "lightweight-charts": "^5.0.9",
        "lucide-react": "^0.292.0",
        "node-fetch": "^3.3.2",
        "pdf-parse": "^1.1.1",
        "python-shell": "^5.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "recharts": "^2.9.0",
        "use-sound": "^5.0.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.16",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^39.2.6",
        "electron-builder": "^26.0.12",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.3.5",
        "typescript": "^5.2.2",
        "vite": "^5.0.0",
        "wait-on": "^9.0.3"
    },
    "build": {
        "appId": "com.zerox.bot",
        "productName": "ZEROX DESKTOP",
        "win": {
            "target": "portable",
            "verifyUpdateCodeSignature": false,
            "signAndEditExecutable": false
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "nucleo/**/*",
            "inteligencia/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        }
    }
}